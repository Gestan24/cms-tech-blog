<div class="col-12 d-flex flex-row m-auto p-auto ">
    <form class="col-6 py-5 px-3 my-5" id="signup-form">

        <div class="card">
            <div class="card-header">
                <h3 class="display-4 text-center">
                    Sign up!
                </h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="signup-username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="signup-email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="signup-password" placeholder="Password">
                </div>
                <button type="submit" id="submit" class="btn btn-block">Submit</button>
            </div>

        </div>
    </form>
    <form class="col-6 py-5 px-3 my-5 border-left" id="login-form">
        <div class="card">
            <div class="card-header">
                <h3 class="display-4 text-center">
                    Login to Tech Blog
                </h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="login-email" placeholder="Email">
                </div>
                <div class="form-group py-2 mt-3">
                    <input type="password" class="form-control" id="login-password" placeholder="Password">
                </div>
                <button type="submit" id="login" class="btn btn-block">Login</button>
            </div>
        </div>
    </form>
</div>
    <script src="/javascript/login.js"></script>